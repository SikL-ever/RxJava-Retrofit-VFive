<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".MyActivity"
    android:background="#fff"
    android:id="@+id/my_user_all">
    <RelativeLayout
        android:layout_width="wrap_content"
        android:layout_height="match_parent">
        <ImageView
            android:layout_width="match_parent"
            android:layout_height="@dimen/dp_280"
            android:background="@drawable/my_background"/>
        <RelativeLayout
            android:id="@+id/one"
            android:layout_marginRight="@dimen/dp_10"
            android:layout_marginLeft="@dimen/dp_10"
            android:layout_marginTop="@dimen/dp_20"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">
            <ImageView
                android:id="@+id/my_user_finsh"
                android:layout_centerVertical="true"
                android:layout_width="@dimen/dp_16"
                android:layout_height="@dimen/dp_16"
                android:background="@drawable/common_icon_back_white_n"/>
            <ImageView
                android:layout_alignParentRight="true"
                android:layout_width="@dimen/dp_24"
                android:layout_height="@dimen/dp_26"
                android:background="@drawable/common_nav_message_white_n"/>
        </RelativeLayout>
        <RelativeLayout
            android:id="@+id/two"
            android:layout_below="@id/one"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/dp_20"
            android:layout_marginLeft="@dimen/dp_10"
            android:layout_marginRight="@dimen/dp_10">
            <ImageView
                android:id="@+id/my_user_image"
                android:layout_width="@dimen/dp_50"
                android:layout_height="@dimen/dp_50" />
            <TextView
                android:id="@+id/my_user_name"
                android:layout_toRightOf="@id/my_user_image"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="昵称正在加载"
                android:textColor="#fff"
                android:textSize="@dimen/sp_16"
                android:layout_centerVertical="true"
                android:layout_marginLeft="@dimen/dp_10"
                />
            <TextView
                android:padding="@dimen/dp_5"
                android:background="@drawable/my_user_qiandao"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="签到"
                android:layout_alignParentRight="true"
                android:layout_centerVertical="true"
                android:textColor="#3287EA"/>
        </RelativeLayout>
        <androidx.cardview.widget.CardView
            app:cardCornerRadius="@dimen/dp_5"
            app:cardElevation="@dimen/dp_5"
            android:layout_marginLeft="@dimen/dp_10"
            android:layout_marginRight="@dimen/dp_10"
            android:layout_marginTop="@dimen/dp_10"
            android:background="#fff"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@+id/two">
            <LinearLayout
                android:layout_margin="@dimen/dp_20"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical">
                <TextView
                    android:textSize="@dimen/sp_16"
                    android:textColor="#000"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="我的问诊"/>
                <RelativeLayout
                    android:layout_marginTop="@dimen/dp_20"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content">
                    <ImageView
                        android:id="@+id/imageone"
                        android:layout_width="@dimen/dp_40"
                        android:layout_height="@dimen/dp_40"
                        android:background="@drawable/the_current_inquiry"
                        />
                    <TextView
                        android:layout_toRightOf="@id/imageone"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="当前问诊"
                        android:textColor="#000"
                        android:textSize="@dimen/dp_14"
                        android:layout_centerVertical="true"
                        android:layout_marginLeft="@dimen/dp_20"
                        />
                    <ImageView
                        android:layout_centerVertical="true"
                        android:layout_alignParentRight="true"
                        android:background="@drawable/my_icon_next_n"
                        android:layout_width="@dimen/dp_15"
                        android:layout_height="@dimen/dp_20" />
                </RelativeLayout>
                <RelativeLayout
                    android:layout_marginTop="@dimen/dp_20"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content">
                    <ImageView
                        android:id="@+id/imagetwo"
                        android:background="@drawable/historical_inquiry"
                        android:layout_width="@dimen/dp_40"
                        android:layout_height="@dimen/dp_40" />
                    <TextView
                        android:layout_toRightOf="@id/imagetwo"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="历史问诊"
                        android:textColor="#000"
                        android:textSize="@dimen/dp_14"
                        android:layout_centerVertical="true"
                        android:layout_marginLeft="@dimen/dp_20"
                        />
                    <ImageView
                        android:layout_centerVertical="true"
                        android:layout_alignParentRight="true"
                        android:background="@drawable/my_icon_next_n"
                        android:layout_width="@dimen/dp_15"
                        android:layout_height="@dimen/dp_20" />
                </RelativeLayout>
            </LinearLayout>
        </androidx.cardview.widget.CardView>
    </RelativeLayout>








</LinearLayout>