<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".DemoActivity"
    android:orientation="vertical"
    android:background="#fff">
        <LinearLayout
            android:background="@drawable/layout_item"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal">
            <ImageView
                android:id="@+id/finist_image"
                android:layout_marginTop="@dimen/dp_4"
                android:layout_marginLeft="@dimen/dp_10"
                android:layout_width="wrap_content"
                android:layout_height="@dimen/dp_30"
                android:background="@drawable/demo_image"
                />
            <EditText
                android:id="@+id/demo_edit"
                android:hint="请输入昵称或者房间号"
                android:layout_marginTop="@dimen/dp_4"
                android:layout_marginBottom="@dimen/dp_6"
                android:layout_width="0dp"
                android:layout_height="@dimen/dp_30"
                android:layout_weight="1"
                android:background="@drawable/demo_edit"/>
            <TextView
                android:id="@+id/demo_sousuo"
                android:layout_marginLeft="@dimen/dp_5"
                android:layout_marginTop="@dimen/dp_4"
                android:layout_marginRight="@dimen/dp_10"
                android:textSize="@dimen/dp_15"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="搜索"/>
        </LinearLayout>
        <LinearLayout
            android:layout_marginTop="@dimen/dp_10"
            android:layout_width="match_parent"
            android:layout_height="@dimen/dp_300"
            android:orientation="vertical">
            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content">
                <TextView
                    android:layout_marginLeft="@dimen/dp_10"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="搜索历史"/>
                <ImageView
                    android:layout_marginRight="@dimen/dp_10"
                    android:id="@+id/remo_demo_view"
                    android:layout_alignParentRight="true"
                    android:layout_width="@dimen/dp_20"
                    android:layout_height="@dimen/dp_20"
                    android:background="@drawable/demo_edit"/>
            </RelativeLayout>
            <com.holo.support.util.FlowLayout1
                android:layout_width="match_parent"
                android:layout_height="@dimen/dp_300"
                android:id="@+id/demo_flow"
                >
            </com.holo.support.util.FlowLayout1>
        </LinearLayout>
</LinearLayout>