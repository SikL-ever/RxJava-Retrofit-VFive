<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical" android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:id="@+id/show_scrollview"
    android:background="#f2f2f2">

    <FrameLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:focusable="true"
        android:focusableInTouchMode="true">
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical">

                <RelativeLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content">
                    <com.recker.flybanner.FlyBanner
                        android:id="@+id/show_banner"
                        android:layout_width="match_parent"
                        android:layout_height="@dimen/dp_250">
                    </com.recker.flybanner.FlyBanner>
                    <LinearLayout
                        android:layout_marginTop="@dimen/dp_10"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="horizontal">
                        <ImageView
                            android:id="@+id/one_user_image"
                            android:layout_marginLeft="@dimen/dp_10"
                            android:layout_width="@dimen/dp_30"
                            android:layout_height="@dimen/dp_30"
                            />
                        <TextView
                            android:id="@+id/show_one_bt"
                            android:layout_toRightOf="@+id/images"
                            android:layout_toLeftOf="@+id/xiaoxi"
                            android:layout_width="0dp"
                            android:layout_weight="1"
                            android:layout_alignBottom="@+id/images"
                            android:layout_marginLeft="10dp"
                            android:layout_marginRight="10dp"
                            android:background="@drawable/shouye"
                            android:text="病症、药品名称、医生姓名"
                            android:gravity="center_vertical"
                            android:textCursorDrawable="@null"
                            android:textColorHint="#cec8c8"
                            android:textSize="12sp"
                            android:textColor="#fff"
                            android:layout_height="32dp" />
                        <TextView
                            android:layout_marginLeft="@dimen/dp_5"
                            android:layout_marginTop="@dimen/dp_4"
                            android:layout_marginRight="@dimen/dp_10"
                            android:textSize="@dimen/dp_15"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="搜索"/>
                    </LinearLayout>
                </RelativeLayout>
                <LinearLayout
                    android:id="@+id/zsbd"
                    android:layout_width="match_parent"
                    android:layout_height="@dimen/dp_40"
                    android:background="#fff"
                    android:layout_marginBottom="@dimen/dp_2">
                    <TextView
                        android:layout_width="@dimen/dp_3"
                        android:layout_height="wrap_content"
                        android:textSize="@dimen/sp_16"
                        android:layout_gravity="center"
                        android:layout_marginLeft="@dimen/dp_12"
                        android:layout_marginRight="@dimen/dp_10"
                        android:background="#3087ea"
                        android:textColor="#3087ea"/>
                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:textSize="@dimen/sp_16"
                        android:layout_gravity="center"
                        android:text="知识宝典"
                        android:textColor="#3087ea"/>
                </LinearLayout>





                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal">

                    <LinearLayout
                        android:id="@+id/show_disease"
                        android:layout_width="0dp"
                        android:layout_weight="1"
                        android:layout_height="wrap_content"
                        android:layout_marginRight="@dimen/dp_3"
                        android:layout_marginBottom="@dimen/dp_4"
                        android:orientation="vertical">
                        <TextView
                            android:layout_width="match_parent"
                            android:layout_height="match_parent"
                            android:text="常见病症"
                            android:background="#fff"
                            android:padding="@dimen/dp_10"
                            android:textSize="@dimen/sp_14"
                            android:textColor="#de333333"
                            />
                        <ImageView
                            android:layout_width="match_parent"
                            android:layout_height="@dimen/dp_160"
                            android:background="#fff"
                            android:scaleType="fitXY"
                            android:paddingLeft="@dimen/dp_10"
                            android:paddingRight="@dimen/dp_10"
                            android:paddingBottom="@dimen/dp_10"
                            android:src="@drawable/common_disease"
                            />
                    </LinearLayout>
                    <LinearLayout
                        android:id="@+id/show_drug"
                        android:layout_width="0dp"
                        android:layout_weight="1"
                        android:orientation="vertical"
                        android:layout_height="wrap_content"
                        android:layout_marginLeft="@dimen/dp_3"
                        android:layout_marginBottom="@dimen/dp_4">
                        <TextView
                            android:layout_width="match_parent"
                            android:layout_height="match_parent"
                            android:text="常用药品"
                            android:background="#fff"
                            android:padding="@dimen/dp_10"
                            android:textSize="@dimen/sp_14"
                            android:textColor="#de333333"
                            android:layout_below="@+id/zsbd"
                            />
                        <ImageView
                            android:layout_width="match_parent"
                            android:layout_height="@dimen/dp_160"
                            android:background="#fff"
                            android:scaleType="fitXY"
                            android:paddingLeft="@dimen/dp_10"
                            android:paddingRight="@dimen/dp_10"
                            android:paddingBottom="@dimen/dp_10"
                            android:src="@drawable/common_drugs"/>
                    </LinearLayout>
                </LinearLayout>
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="@dimen/dp_40"
                    android:background="#fff"
                    android:layout_marginBottom="@dimen/dp_2">
                    <TextView
                        android:layout_width="@dimen/dp_3"
                        android:layout_height="wrap_content"
                        android:textSize="@dimen/sp_16"
                        android:layout_gravity="center"
                        android:layout_marginLeft="@dimen/dp_12"
                        android:layout_marginRight="@dimen/dp_10"
                        android:background="#3087ea"
                        android:textColor="#3087ea"/>
                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:textSize="@dimen/sp_16"
                        android:layout_gravity="center"
                        android:text="问诊咨询"
                        android:textColor="#3087ea"/>
                </LinearLayout>
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:background="#fff">
                    <androidx.recyclerview.widget.RecyclerView
                        android:id="@+id/show_Interrogation_consulting_recycler"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_margin="@dimen/dp_10">
                    </androidx.recyclerview.widget.RecyclerView>
                </LinearLayout>
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="@dimen/dp_40"
                    android:background="#fff"
                    android:layout_marginBottom="@dimen/dp_2">
                    <TextView
                        android:layout_width="@dimen/dp_3"
                        android:layout_height="wrap_content"
                        android:textSize="@dimen/sp_16"
                        android:layout_gravity="center"
                        android:layout_marginLeft="@dimen/dp_12"
                        android:layout_marginRight="@dimen/dp_10"
                        android:background="#3087ea"
                        android:textColor="#3087ea"/>
                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:textSize="@dimen/sp_16"
                        android:layout_gravity="center"
                        android:text="健康测评"
                        android:textColor="#3087ea"/>
                </LinearLayout>
                <ImageView
                    android:id="@+id/jkcp"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:src="@drawable/health_assessment"
                    android:scaleType="fitXY"
                    />
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="@dimen/dp_40"
                    android:background="#fff"
                    android:layout_marginBottom="@dimen/dp_2">
                    <TextView
                        android:layout_width="@dimen/dp_3"
                        android:layout_height="wrap_content"
                        android:textSize="@dimen/sp_16"
                        android:layout_gravity="center"
                        android:layout_marginLeft="@dimen/dp_12"
                        android:layout_marginRight="@dimen/dp_10"
                        android:background="#3087ea"
                        android:textColor="#3087ea"/>
                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:textSize="@dimen/sp_16"
                        android:layout_gravity="center"
                        android:text="健康咨询"
                        android:textColor="#3087ea"/>
                </LinearLayout>
                <androidx.recyclerview.widget.RecyclerView
                    android:id="@+id/health_recycler"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content">
                </androidx.recyclerview.widget.RecyclerView>
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginBottom="@dimen/dp_60"
                    android:text="查看更多>>"
                    android:layout_marginRight="@dimen/dp_15"
                    android:paddingTop="@dimen/dp_10"
                    android:paddingBottom="@dimen/dp_10"
                    android:layout_gravity="center|right"
                    android:textColor="#008cff"/>


            </LinearLayout>
    </FrameLayout>
</ScrollView>