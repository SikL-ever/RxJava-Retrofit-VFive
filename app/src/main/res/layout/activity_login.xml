<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout  xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".LoginActivity"
    android:background="@drawable/login_bg">
    <ImageView
        android:id="@+id/login_top_image"
        android:layout_width="@dimen/dp_60"
        android:layout_height="@dimen/dp_60"
        android:background="@drawable/login_log_two"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="@dimen/dp_50"/>

    <LinearLayout
        android:alpha="0.3"
        android:background="@drawable/login_back"
        android:layout_below="@id/login_top_image"
        android:layout_marginTop="@dimen/dp_70"
        android:layout_width="match_parent"
        android:layout_height="@dimen/dp_220"
        android:layout_marginLeft="@dimen/dp_48"
        android:layout_marginRight="@dimen/dp_48">
    </LinearLayout>
    <LinearLayout
        android:alpha="0.6"
        android:background="@drawable/login_back"
        android:layout_below="@id/login_top_image"
        android:layout_marginTop="@dimen/dp_65"
        android:layout_width="match_parent"
        android:layout_height="@dimen/dp_220"
        android:layout_marginLeft="@dimen/dp_44"
        android:layout_marginRight="@dimen/dp_44">
    </LinearLayout>
    <LinearLayout
        android:background="@drawable/login_back"
        android:layout_below="@id/login_top_image"
        android:layout_marginTop="@dimen/dp_60"
        android:layout_width="match_parent"
        android:layout_height="@dimen/dp_220"
        android:layout_marginLeft="@dimen/dp_40"
        android:layout_marginRight="@dimen/dp_40">
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_marginLeft="@dimen/dp_10"
            android:layout_marginRight="@dimen/dp_10"
            android:orientation="vertical">
            <LinearLayout
                android:layout_marginTop="@dimen/dp_20"
                android:background="@drawable/layout_item"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal">
                <ImageView
                    android:layout_gravity="center_vertical"
                    android:layout_width="@dimen/dp_20"
                    android:layout_height="@dimen/dp_17"
                    android:background="@drawable/login_icon_mail_n"/>
                <EditText
                    android:id="@+id/login_name"
                    android:layout_marginLeft="@dimen/dp_5"
                    android:hint="请输入账号"
                    android:background="@null"
                    android:layout_width="match_parent"
                    android:layout_height="@dimen/dp_30" />
            </LinearLayout>
            <LinearLayout
                android:layout_marginTop="@dimen/dp_20"
                android:background="@drawable/layout_item"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal">
                <ImageView
                    android:layout_gravity="center_vertical"
                    android:layout_width="@dimen/dp_20"
                    android:layout_height="@dimen/dp_17"
                    android:background="@drawable/login_icon_lock_n"/>
                <EditText
                    android:id="@+id/login_pass"
                    android:layout_marginLeft="@dimen/dp_5"
                    android:hint="请输入密码"
                    android:background="@null"
                    android:layout_width="0dp"
                    android:layout_weight="1"
                    android:layout_height="@dimen/dp_30" />
                <ImageView
                    android:id="@+id/passhideshow"
                    android:layout_gravity="center_vertical"
                    android:layout_width="@dimen/dp_20"
                    android:layout_height="@dimen/dp_15"/>
            </LinearLayout>
            <Button
                android:layout_marginTop="@dimen/dp_20"
                android:background="@drawable/welcometext_item"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="登录"
                android:textColor="#fff"
                android:id="@+id/login_bt"
                />
        </LinearLayout>
    </LinearLayout>




</RelativeLayout>