<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".MyUserSetingActivity"
    android:orientation="vertical"
    android:background="#fff">

    <com.holo.support.util.TopUtil
        android:id="@+id/user_seting_top"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"/>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="#F2F2F2"
        android:orientation="vertical">

        <RelativeLayout
            android:background="#fff"
            android:layout_marginTop="@dimen/dp_10"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">
            <ImageView
                android:layout_marginTop="@dimen/dp_10"
                android:layout_marginBottom="@dimen/dp_10"
                android:layout_width="@dimen/dp_40"
                android:layout_height="@dimen/dp_40"
                android:id="@+id/user_seting_image"
                android:layout_marginLeft="@dimen/dp_20"/>
            <TextView
                android:id="@+id/user_seting_name"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="希望是个好东西"
                android:textSize="@dimen/dp_14"
                android:textColor="#000"
                android:layout_centerVertical="true"
                android:layout_toRightOf="@id/user_seting_image"
                android:layout_marginLeft="@dimen/dp_10"/>
        </RelativeLayout>
        <RelativeLayout
            android:id="@+id/user_seting_up_pass"
            android:background="#fff"
            android:layout_marginTop="@dimen/dp_5"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">
            <TextView
                android:layout_marginTop="@dimen/dp_10"
                android:layout_marginBottom="@dimen/dp_10"
                android:textColor="#000"
                android:textSize="@dimen/dp_14"
                android:layout_marginLeft="@dimen/dp_20"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="修改密码"/>
        </RelativeLayout>
        <RelativeLayout
            android:id="@+id/user_seting_clear_cache"
            android:background="#fff"
            android:layout_marginTop="@dimen/dp_5"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">
            <TextView
                android:layout_marginTop="@dimen/dp_10"
                android:layout_marginBottom="@dimen/dp_10"
                android:textColor="#000"
                android:textSize="@dimen/dp_14"
                android:layout_marginLeft="@dimen/dp_20"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="清理缓存"/>
        </RelativeLayout>
        <RelativeLayout
            android:id="@+id/user_seting_screen"
            android:background="#fff"
            android:layout_marginTop="@dimen/dp_5"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">
            <TextView
                android:layout_marginTop="@dimen/dp_10"
                android:layout_marginBottom="@dimen/dp_10"
                android:textColor="#000"
                android:textSize="@dimen/dp_14"
                android:layout_marginLeft="@dimen/dp_20"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="屏幕亮度"/>
        </RelativeLayout>
        <RelativeLayout
            android:id="@+id/user_seting_versions"
            android:background="#fff"
            android:layout_marginTop="@dimen/dp_5"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">
            <TextView
                android:layout_marginTop="@dimen/dp_10"
                android:layout_marginBottom="@dimen/dp_10"
                android:textColor="#000"
                android:textSize="@dimen/dp_14"
                android:layout_marginLeft="@dimen/dp_20"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="版本检测"/>
        </RelativeLayout>

        <RelativeLayout
            android:id="@+id/user_seting_help_center"
            android:background="#fff"
            android:layout_marginTop="@dimen/dp_10"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">
            <TextView
                android:layout_marginTop="@dimen/dp_10"
                android:layout_marginBottom="@dimen/dp_10"
                android:textColor="#000"
                android:textSize="@dimen/dp_14"
                android:layout_marginLeft="@dimen/dp_20"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="帮助中心"/>
        </RelativeLayout>
        <RelativeLayout
            android:id="@+id/user_seting_about_me"
            android:background="#fff"
            android:layout_marginTop="@dimen/dp_5"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">
            <TextView
                android:layout_marginTop="@dimen/dp_10"
                android:layout_marginBottom="@dimen/dp_10"
                android:textColor="#000"
                android:textSize="@dimen/dp_14"
                android:layout_marginLeft="@dimen/dp_20"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="关于我们"/>
        </RelativeLayout>
        <RelativeLayout
            android:id="@+id/user_seting_invite_friends"
            android:background="#fff"
            android:layout_marginTop="@dimen/dp_5"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">
            <TextView
                android:layout_marginTop="@dimen/dp_10"
                android:layout_marginBottom="@dimen/dp_10"
                android:textColor="#000"
                android:textSize="@dimen/dp_14"
                android:layout_marginLeft="@dimen/dp_20"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="邀请好友"/>
        </RelativeLayout>
        <RelativeLayout
            android:id="@+id/user_seting_logout"
            android:layout_marginBottom="@dimen/dp_5"
            android:background="#fff"
            android:layout_marginTop="@dimen/dp_5"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">
            <TextView
                android:layout_centerHorizontal="true"
                android:layout_marginTop="@dimen/dp_10"
                android:layout_marginBottom="@dimen/dp_10"
                android:textColor="#E35B49"
                android:textSize="@dimen/dp_14"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="退出登录"/>
        </RelativeLayout>
    </LinearLayout>



</LinearLayout>